# OS specific support.  $CYGWIN _must_ be set to 'true' to support cygwin.
cygwin=false
darwin=false
os400=false
case "`uname`" in
  CYGWIN*) cygwin=true;;
  Darwin*) darwin=true;;
  OS400*) os400=true;;
esac

# For OS400 we need a different execution of the java command
if ${os400}; then
  exec java -Xmx256m -Dmaven.home=$MAVEN_HOME -classpath "$CLASSPATH" org.codehaus.classworlds.Launcher "$@"
else
  # Add default JVM options here. You can also use set JAVA_OPTS to pass JVM options to this script.
  DEFAULT_JVM_OPTS="-Xmx256m"

  JAVA_OPTS="${DEFAULT_JVM_OPTS} ${JAVA_OPTS}"

  DIRNAME="`dirname "$0"`"
  APP_BASE_NAME="`basename "$0"`"

  # Find the Java executable
  if [ -z "$JAVA_HOME" ]; then
    JAVA_CMD="java"
  else
    JAVA_CMD="$JAVA_HOME/bin/java"
  fi

  # Find the Maven Wrapper JAR
  WRAPPER_JAR="$DIRNAME/.mvn/wrapper/maven-wrapper.jar"

  # Make sure the Maven Wrapper JAR exists
  if [ ! -f "$WRAPPER_JAR" ]; then
    echo "The Maven Wrapper JAR does not exist at '$WRAPPER_JAR'."
    echo "Please run 'mvn wrapper:wrapper' to generate it."
    exit 1
  fi

  # Execute the Maven Wrapper
  exec "$JAVA_CMD" $JAVA_OPTS -jar "$WRAPPER_JAR" "$@"
fi
